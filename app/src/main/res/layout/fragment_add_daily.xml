<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.mobilenvision.notextra.ui.addDaily.AddDailyViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddDailyFragment"
        android:background="?attr/colorSplashBackground">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorSplashBackground"
                android:textColor="?attr/colorEditTextIcon"
                android:textColorHint="?attr/colorTextHint"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="20dp"
                android:textSize="16sp"/>


            <EditText
                android:id="@+id/note_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="?attr/colorSplashBackground"
                android:gravity="top"
                android:hint="@string/enter_note"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:minHeight="450dp"
                app:setFontFamily="@{viewModel.font}"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:textColor="?attr/colorEditTextIcon"
                android:textColorHint="?attr/colorTextHint"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dayTextView" />
        <Button
            android:id="@+id/btn_text_microphone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/microphone"
            android:onClick="@{() -> viewModel.onNoteMicrophoneClick()}"
            app:layout_constraintEnd_toEndOf="@id/note_description"
            app:layout_constraintTop_toTopOf="@id/note_description"
            android:layout_margin="10dp"/>

            <Button
                android:id="@+id/add_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/note_description"
                android:text="@string/add_images"
                android:onClick="@{() -> viewModel.onAddImageClick()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/rounded_gradient_button"
                android:textColor="?attr/colorButtonText"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/add_images"
                android:layout_margin="10dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

        <Button
            android:id="@+id/btn_save_note"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textAllCaps="false"
            android:background="@drawable/save_button"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:onClick="@{() -> viewModel.onSaveClick()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>