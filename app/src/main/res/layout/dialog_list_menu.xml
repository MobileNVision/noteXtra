<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/delete"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gradient_button"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:paddingStart="40dp"
        android:text="@string/delete"
        android:textColor="?attr/colorButtonText"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:drawableStartCompat="@drawable/delete"/>
    <TextView
        android:id="@+id/edit"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@string/edit"
        android:layout_marginTop="10dp"
        android:textColor="?attr/colorButtonText"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/rounded_gradient_button"
        android:paddingStart="25dp"
        app:drawableLeftCompat="@drawable/edit" />
    <TextView
        android:id="@+id/add_widget"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@string/add_widget"
        android:layout_marginTop="10dp"
        android:textColor="?attr/colorButtonText"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/rounded_gradient_button"
        android:paddingStart="10dp"
        app:drawableLeftCompat="@drawable/widget" />
    <TextView
        android:id="@+id/share"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@string/share"
        android:layout_marginTop="10dp"
        android:textColor="?attr/colorButtonText"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/rounded_gradient_button"
        android:paddingStart="30dp"
        app:drawableLeftCompat="@drawable/share" />
</LinearLayout>